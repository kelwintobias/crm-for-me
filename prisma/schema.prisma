// Configuracoes do Gerador e Fonte de Dados
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// ENUMS
// --------------------------------------

enum LeadSource {
  INSTAGRAM
  INDICACAO
  PAGINA_PARCEIRA
  INFLUENCER
  ANUNCIO
  OUTRO
}

enum PlanType {
  INDEFINIDO
  INTERMEDIARIO
  AVANCADO
  ELITE
  PRO_PLUS
  ULTRA_PRO
  EVOLUTION
}

enum PipelineStage {
  NOVO_LEAD
  EM_NEGOCIACAO
  AGENDADO
  EM_ATENDIMENTO
  POS_VENDA
  FINALIZADO
}

enum UserRole {
  ADMIN
  VENDEDOR
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
}

enum HistoryAction {
  CREATED
  RESCHEDULED
  CANCELED
  COMPLETED
}

enum ContractSource {
  ANUNCIO
  INDICACAO
  INFLUENCIADOR
  PARCEIRO
}

enum ContractPackage {
  INTERMEDIARIO
  AVANCADO
  ELITE
  PRO_PLUS
  ULTRA_PRO
  EVOLUTION
}

// --------------------------------------
// MODELS
// --------------------------------------

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  role           UserRole @default(VENDEDOR)

  // Controle de senha - força atualização no próximo login
  mustChangePassword Boolean @default(false)

  // Controle de abas visíveis (valores: dashboard, kanban, contratos, pessoas, custos)
  allowedTabs    String[] @default(["kanban", "pessoas"])

  // Taxa de comissao do vendedor (ex: 10.00 = 10%)
  commissionRate Decimal  @default(0) @db.Decimal(5, 2)

  leads              Lead[]                 @relation("UserLeads")
  appointments       Appointment[]          @relation("UserAppointments")
  appointmentHistory AppointmentHistory[]   @relation("UserAppointmentHistory")
  contracts          Contract[]             @relation("UserContracts")
  fixedCosts         FixedCost[]            @relation("UserFixedCosts")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Lead {
  id        String   @id @default(uuid())

  name      String
  phone     String
  source    LeadSource    @default(INSTAGRAM)
  plan      PlanType      @default(INDEFINIDO)

  // Valor financeiro calculado automaticamente no backend
  // Plano Unico: R$ 35,90 | Plano Mensal: R$ 45,90 | Indefinido: R$ 0,00
  value     Decimal       @default(0) @db.Decimal(10, 2)

  stage     PipelineStage @default(NOVO_LEAD)
  notes     String?  @db.Text

  // Campos do "Espelho da Planilha"
  email          String?       // Email do cliente
  contractDate   DateTime?     // Data da venda/contrato
  instagram      String?       // Link do Instagram
  cpf            String?       // CPF do cliente
  packageType    String?       // Pacote adquirido (ex: Ultra, Mensal)
  addOns         String?       // Adicionais
  termsAccepted  Boolean       @default(false) // Declaracao/termos aceitos

  userId    String
  user      User     @relation("UserLeads", fields: [userId], references: [id])

  appointments Appointment[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([stage])
  @@index([userId])
  @@index([createdAt])
  @@map("leads")
}

model Appointment {
  id          String   @id @default(uuid())

  // Relacionamentos
  leadId      String
  lead        Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  userId      String   // Vendedora que agendou
  user        User     @relation("UserAppointments", fields: [userId], references: [id])

  // Detalhes do agendamento
  scheduledAt DateTime // Data e hora do agendamento
  duration    Int      @default(60) // Duração em minutos (padrão: 60)

  // Status
  status      AppointmentStatus @default(SCHEDULED)

  // Observações
  notes       String?  @db.Text

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  canceledAt  DateTime?

  // Histórico de mudanças
  history     AppointmentHistory[]

  // Índices para performance
  @@index([leadId])
  @@index([userId])
  @@index([scheduledAt])
  @@index([status])

  @@map("appointments")
}

model AppointmentHistory {
  id            String   @id @default(uuid())

  appointmentId String
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  userId        String   // Quem fez a mudança
  user          User     @relation("UserAppointmentHistory", fields: [userId], references: [id])

  action        HistoryAction
  previousValue String?  @db.Text // JSON com estado anterior
  newValue      String?  @db.Text // JSON com novo estado

  createdAt     DateTime @default(now())

  @@index([appointmentId])
  @@map("appointment_history")
}

model Contract {
  id            String   @id @default(uuid())
  
  // Dados do cliente
  clientName    String
  email         String?
  whatsapp      String
  instagram     String?
  cpf           String?
  
  // Detalhes do contrato
  contractDate  DateTime
  source        ContractSource
  package       ContractPackage
  addons        String[]   // Lista de adicionais selecionados
  termsAccepted Boolean    @default(false)
  
  // Valor calculado automaticamente no backend
  totalValue    Decimal    @db.Decimal(10, 2)
  
  // Relacionamento
  userId        String
  user          User       @relation("UserContracts", fields: [userId], references: [id])
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  @@index([userId])
  @@index([contractDate])
  @@map("contracts")
}

model FixedCost {
  id          String   @id @default(uuid())
  
  // Detalhes do custo
  date        DateTime // Data do custo
  type        String   // Tipo (ex: Despesa)
  category    String   // Categoria (ex: automação de mensagens)
  description String   // Descrição (ex: Manychat)
  value       Decimal  @db.Decimal(10, 2) // Valor em reais
  month       Int      // Mês (1-12)
  year        Int      // Ano
  
  // Relacionamento
  userId      String
  user        User     @relation("UserFixedCosts", fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([date])
  @@map("fixed_costs")
}
