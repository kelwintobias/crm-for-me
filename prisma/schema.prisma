// Configuracoes do Gerador e Fonte de Dados
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// ENUMS
// --------------------------------------

enum LeadSource {
  INSTAGRAM
  GOOGLE
  INDICACAO
  OUTRO
}

enum PlanType {
  INDEFINIDO
  PLANO_UNICO
  PLANO_MENSAL
}

enum PipelineStage {
  NOVO_LEAD
  EM_NEGOCIACAO
  AGENDADO
  EM_ATENDIMENTO
  POS_VENDA
  FINALIZADO
}

enum UserRole {
  ADMIN
  VENDEDOR
}

// --------------------------------------
// MODELS
// --------------------------------------

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  role           UserRole @default(VENDEDOR)

  // Taxa de comissao do vendedor (ex: 10.00 = 10%)
  commissionRate Decimal  @default(0) @db.Decimal(5, 2)

  leads     Lead[]   @relation("UserLeads")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Lead {
  id        String   @id @default(uuid())

  name      String
  phone     String
  source    LeadSource    @default(INSTAGRAM)
  plan      PlanType      @default(INDEFINIDO)

  // Valor financeiro calculado automaticamente no backend
  // Plano Unico: R$ 35,90 | Plano Mensal: R$ 45,90 | Indefinido: R$ 0,00
  value     Decimal       @default(0) @db.Decimal(10, 2)

  stage     PipelineStage @default(NOVO_LEAD)
  notes     String?  @db.Text

  userId    String
  user      User     @relation("UserLeads", fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([stage])
  @@index([userId])
  @@index([createdAt])
  @@map("leads")
}
